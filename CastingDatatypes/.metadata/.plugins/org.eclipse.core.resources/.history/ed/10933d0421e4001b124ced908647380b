package main;
import java.util.Scanner;
public class Converter {
public static void main(String[] args) {
	Scanner input = new Scanner(System.in);
int menuSelection = 0;
while (menuSelection !=5){
	System.out.println("Please select an option:");
    System.out.print("1.meters to decimeters");
    System.out.print("2.milliliters to liters");
    System.out.print("3.grams to nanograms");
    System.out.print("4.centimeters to kilometers");
    System.out.print("5.megagrams to centigrams");
    
    menuSelection = input.nextInt();
    
    switch(menuSelection){

    case 1:
        System.out.println("case 6 ran");
        break;
    case 2:
        System.out.println("The default case ran.");
        break;
    case 3:
        System.out.println("case 7 ran");
        break;
    case 4:
        System.out.println("case 10 ran");
    case 5:
        System.out.println("case 6 ran");
        break;
    case 6:
        System.out.println("The default case ran.");
        break;
    
    		}
		}
	}
}